<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.znerd</groupId>
  <artifactId>logdoc</artifactId>
  <packaging>pom</packaging>
  <version>0.22-SNAPSHOT</version>

  <name>Logdoc</name>
  <description>Contract-first logging tool, featuring internationalization and generation of code/web docs</description>
  <url>https://github.com/znerd/logdoc</url>

  <modules>
    <module>logdoc-ant-tasks</module>
    <module>logdoc-atg</module>
    <module>logdoc-core</module>
    <module>logdoc-log4j</module>
    <module>logdoc-maven-plugin</module>
    <module>logdoc-sample-project</module>
    <module>logdoc-slf4j</module>
  </modules>

  <properties>
    <ant.version>1.8.2</ant.version>
    <atg.version>10.0.2</atg.version>
    <commons-io.version>2.0.1</commons-io.version>
    <commons-lang.version>2.5</commons-lang.version>
    <doxia-site-renderer.version>1.1.2</doxia-site-renderer.version>
    <junit.version>4.8.2</junit.version>
    <log4j.version>1.2.15</log4j.version>
    <slf4j.version>1.6.4</slf4j.version>
    <maven.version>3.0.3</maven.version>
    <maven-compiler-plugin.version>2.3.2</maven-compiler-plugin.version>
    <maven-eclipse-plugin.version>2.8</maven-eclipse-plugin.version> <!-- TODO: Upgrade to 2.9 as soon as it is available, to get rid of the cacheFile workaround, see http://jira.codehaus.org/browse/MCHECKSTYLE-159 -->
    <maven-jar-plugin.version>2.3.1</maven-jar-plugin.version>
    <maven-javadoc-plugin.version>2.8</maven-javadoc-plugin.version>
    <maven-project.version>2.2.1</maven-project.version>
    <maven-reporting-api.version>3.0</maven-reporting-api.version>
    <maven-reporting-impl.version>2.1</maven-reporting-impl.version>
    <maven-surefire-plugin.version>2.9</maven-surefire-plugin.version>
    <plexus-utils.version>3.0</plexus-utils.version>
    <znerd-util.version>0.6</znerd-util.version>

    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    <surefire.useFile>false</surefire.useFile>
  </properties>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.znerd</groupId>
        <artifactId>znerd-util</artifactId>
        <version>${znerd-util.version}</version>
      </dependency>
      <dependency>
        <groupId>junit</groupId>
        <artifactId>junit</artifactId>
        <version>${junit.version}</version>
        <scope>test</scope>
      </dependency>
      <dependency>
        <groupId>commons-io</groupId>
        <artifactId>commons-io</artifactId>
        <version>${commons-io.version}</version>
      </dependency>
      <dependency>
        <groupId>commons-lang</groupId>
        <artifactId>commons-lang</artifactId>
        <version>${commons-lang.version}</version>
      </dependency>
      <dependency>
        <groupId>log4j</groupId>
        <artifactId>log4j</artifactId>
        <version>${log4j.version}</version>
        <exclusions>
          <exclusion>
            <groupId>javax.mail</groupId>
            <artifactId>mail</artifactId>
          </exclusion>
          <exclusion>
            <groupId>javax.jms</groupId>
            <artifactId>jms</artifactId>
          </exclusion>
          <exclusion>
            <groupId>com.sun.jdmk</groupId>
            <artifactId>jmxtools</artifactId>
          </exclusion>
          <exclusion>
            <groupId>com.sun.jmx</groupId>
            <artifactId>jmxri</artifactId>
          </exclusion>
        </exclusions>
      </dependency>
      <dependency>
        <groupId>org.apache.ant</groupId>
        <artifactId>ant</artifactId>
        <version>${ant.version}</version>
      </dependency>
      <dependency>
        <groupId>org.apache.maven</groupId>
        <artifactId>maven-plugin-api</artifactId>
        <version>${maven.version}</version>
      </dependency>
    </dependencies>
  </dependencyManagement>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-eclipse-plugin</artifactId>
        <version>${maven-eclipse-plugin.version}</version>
        <configuration>
          <downloadSources>true</downloadSources>
          <downloadJavadocs>true</downloadJavadocs>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
